<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ListBoxNew.Edit"
        Title="Edit">
	<StackPanel Background="White">
		<Grid
			ColumnDefinitions="200,200,200, 100"
			RowDefinitions="100,100,200">
			<TextBox Width="200"
				Grid.Column="0"
				Grid.Row="1"
				Watermark="ProdName"
				Name="prodName"
					 Margin="30,0,0,0"
				/>
			<TextBox
				Grid.Row="1"
				Width="200"
			Grid.Column="1"
			Watermark="PriceName"
			Name="priceName"
				Margin="40,0,0,0"
			/>
			<Button Click="EditB"
				Grid.Column="0" Grid.Row="2" Width="250" Height="30" Margin="60,0,0,0" Background="Lavender">
				<TextBlock HorizontalAlignment="Center" Foreground="Blue">
					Редактировать и назад
				</TextBlock>
			</Button>
		</Grid>
	</StackPanel>
</Window>
